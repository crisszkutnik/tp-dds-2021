<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title>Patitas al rescate</title>
</head>

<body>
    {{> partials/nav.hbs this}}
    <div class="d-flex flex-wrap mt-4 w-100">
    {{#each interesado}}
        <div class='d-flex border mx-3 justify-content-center align-items-center'>
            <div class='d-flex flex-column text-white bg-dark h-100 p-3 justify-content-around'>
                <h2>{{adoptante.nombre}} {{adoptante.apellido}}</h2>
                <form method="post" action="/misMascotas/interesadosAdopcion/{{ofertaAdopcion.id}}/transferirMascota/{{id}}">
                    <input type="submit" value="Transferir mascota" class="btn btn-primary" />
                </form>
            </div>
            <div class='d-flex flex-row'>
                {{> partials/datosDeContacto.hbs contacto}}
            </div>
        </div>
    {{/each}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>