{{#unless isLogged}}
<div class='form-title form-title-green'>
    <div>
        <span>1</span>
        <h1>Datos del rescatista</h1>
    </div>
    <hr />
</div>
<div class='d-flex w-100 flex-wrap alt-form-container justify-content-between'>
    <div class="form-floating mb-3">
        <input type="text" name="name" class="form-control" id="floatingName" placeholder="Nombre" required />
        <label for="floatingName">Nombre</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" name="surname" class="form-control" id="floatingApellido" placeholder="Apellido" required />
        <label for="floatingApellido">Apellido</label>
    </div>
    <div class="form-floating mb-3">
        <input type="number" name="cuil" class="form-control" id="floatingCUIL" placeholder="CUIL" required />
        <label for="floatingCUIL">CUIL</label>
    </div>
    <div class="input-group mb-3">
        <select class="btn btn-outline-secondary dropdown-toggle" name="tipoDoc" required>
            <option value="DNI" selected>DNI</option>
            <option value="Pasaporte">Pasaporte</option>
            <option value="Cedula">Cedula</option>
            <option value="Libreta">Libreta</option>
        </select>
        <input type="number" class="form-control" name="doc" aria-label="Text input with dropdown button" required>
    </div>
</div>
{{/unless}}
{{> partials/tituloFormularioCondicion.hbs
    text="Datos de contacto"
    isLogged=isLogged
    loggedVal=1
    notLoggedVal=2
    colourClass='form-title-blue'
}}
<div id="contact-section-bootstrap" class="w-100">
</div>
<button type='button' id='add-contact-bootstrap' class='btn btn-primary'>Agregar contacto</button>
{{> partials/tituloFormularioCondicion.hbs
    text="Datos de la mascota"
    isLogged=isLogged
    loggedVal=2
    notLoggedVal=3
    colourClass='form-title-orange'
}}
{{#unless nombreMascota}}
<div class="d-flex w-100 alt-form-container flex-wrap justify-content-between">
    <div class="form-floating mb-3">
        <select class="form-select" name="Tipo" id="floatingTipo" required aria-label="Floating label select example">
            <option disabled selected>Seleccione uno</option>
            <option value="PERRO">Perro</option>
            <option value="GATO">Gato</option>
        </select>
        <label for="floatingTipo">Tipo</label>
    </div>
    <div class="form-floating mb-3">
        <select name="Tamanio" class="form-select" id="floatingTamanio" required aria-label="Floating label select example">
            <option disabled selected>Seleccione uno</option>
            <option value="CHICA">Chica</option>
            <option value="MEDIANA">Mediana</option>
            <option value="GRANDE">Grande</option>
        </select>
        <label for="floatingTamanio">Tamaño</label>
    </div>
</div>
{{/unless}}
<div class="form-floating mb-3 full-width-alt-form">
    <textarea name="Descripcion" class="form-control" placeholder="Descripcion" id="floatingDescripcion" required></textarea>
    <label for="floatingDescripcion">Descripción</label>
</div>
<div class='d-flex flex-wrap justify-content-between'>
    <div class="mb-3 mx-1">
        <label for="formFileSm" class="form-label">Imagenes</label>
        <input name="mascotaImg1" class="form-control form-control-sm" id="formFileSm" type="file">
    </div>
    <div class="mb-3 mx-1">
        <label for="formFileSm" class="form-label">Imagenes</label>
        <input name="mascotaImg2" class="form-control form-control-sm" id="formFileSm" type="file">
    </div>
    <div class="mb-3 mx-1">
        <label for="formFileSm" class="form-label">Imagenes</label>
        <input name="mascotaImg3" class="form-control form-control-sm" id="formFileSm" type="file">
    </div>
    <div class="mb-3 mx-1">
        <label for="formFileSm" class="form-label">Imagenes</label>
        <input name="mascotaImg4" class="form-control form-control-sm" id="formFileSm" type="file">
    </div>
</div>
<div id="map"></div>
<div style="display: none">
    <input type="number" name="lat" />
    <input type="number" name="lng" />
</div>
<input type='submit' class='btn btn-primary my-5' value="Enviar" />